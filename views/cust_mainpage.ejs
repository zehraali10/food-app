                       <h4 id="<%=newdish._id %>n" name="title"><%= newdish.name %></h4>
                       <h4 id="<%=newdish._id %>p" name="price">â‚¹<%= newdish.price %></h4>
                       <% if(time=="A") { %>
                       <% if( hours<11 && hours>7) {%>
                       <a href="/add-to-cart/<%= newdish._id %>" class="btn btn-success pull-center" role="button" >Add to Cart</a>
                       <% } }else { %>
                       
                       <h4>Currently unavailable</h4>
                       <%  } %>
                       
                       
                       
