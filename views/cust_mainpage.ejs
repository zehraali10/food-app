<h2 color="white"> Meals</h2>
<div class="scrollmenu">
    
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% newdish.forEach(function(newdish){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= newdish.image %>" width=200>
          
