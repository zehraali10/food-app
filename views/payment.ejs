<!DOCTYPE html>
<html>
<head>
	
  <title>LUNCHIN'</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/pay.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
        <script>
          function checkaddpin(selpin){
            var seladdd=document.getElementById("address").value;
           var seladd=seladdd.toLowerCase();
           
           var address1=["arm embedded technologies,bengaluru","dell emc corporation,bangaluru","amazon development centre,aquila building,bengaluru"]
           var address2=["artech infosystems bangalore,india","dxc technology","audi bengaluru"]
            switch(selpin)
            {
              
              case 560078 : if(address1.includes(seladd)){
                               alert("pin and address are matching go ahead!");
                              
                                   }
                            else{
                               alert("address not matching with pin");
                            }
                            break;
              case 560100 : if(address2.includes(seladd)){
                             alert("pin and address are matching go ahead!");
                              
                             } 
                             else{
                               alert("address not matching with pin");
                             }
                             break;
              default     : alert("invalid pin");                   
            }
          
          }
        </script>
     </head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container-fluid">
          <div class="navbar-header">
              <a class="navbar-brand" href="/">LUNCHIN'!</a>
          </div>
           <div class="collapse navbar-collapse">
               <ul class="nav navbar-nav navbar-right">
                 
                   <li> <a href="/cart">Cart</a></li>
                   <li> <a href="/profile">Profile</a></li>
                   <li><a href="/cust_mainpage">Menu</a></li>
                  <li> <a href="/orderstatus">Orders</a></li>
                  
                   <li> <a href="/logout">Logout</a></li>
                   
                  
               </ul>
               
           </div>
      </div>
    
</nav>

<br/><br/><br/><br/>
<div class="row">
  <div class="col-75">
    <div class="container">
      <form action="/checkout" method="post" id="myform">
 
          <div class="col-50">
            <h1><b>Payment</b></h1>
            <label for="cname">Name on Card</label>
            <input type="text" id="cname" name="cardname" placeholder="Card Holders name">
            <label for="ccnum">Credit card number</label>
            <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
            <label for="expmonth">Exp Month</label>
            <input type="text" id="expmonth" name="expmonth" placeholder="September">
           
            
           
            <label for="cname">Address</label>
            <input type="text" id="address" name="address" placeholder="address">
            <label> select a pin</label>
           
           <label>
             <input type="radio" name="pincode" value="560078" onclick="checkaddpin(560078)" />
              560078</label>
             <label>
             <input type="radio" name="pincode" value="560100" onclick="checkaddpin(560100)" />
             560100 </label>
             
            
            <div class="row">
              <div class="col-50">
                <label for="expyear">Exp Year</label>
                <input type="text" id="expyear" name="expyear" placeholder="2018">
              </div>
              <div class="col-50">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="352">
              </div>
            </div>
         
          </div>
         <label>
          <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
        </label>
        <input type="submit" value="Continue to checkout" class="btn">
      
        </div>
       
      </form>
    </div>
  </div>
  </div>
  

  <div class="col-25">
    <div class="container">
      <h4><b>Cart</b>

        <span class="price" style="color:black">
          <i class="fa fa-shopping-cart"></i> 
          <%= session.cart.totalQty %>
        </span>
      </h4>
      <% products.forEach(function(product){ %>
      <p><span class="price">â‚¹<%= product.price %></h4>
                       </span></p>
      <div class="description">
            <span><b><%= product.item.name %></b></span>
          </div>
          <% }); %>
      <hr>
      <p><b>Total</b> <span class="price" style="color:black"><b><%= totalPrice %></b></span></p>
    </div>
  </div>
</div>

</div>
